@model KentKonsey.Models.HaberModel

@{
    ViewBag.Title = "EditOzel";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("EditOZel", "Home", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <br /><br />
            <div style="width:800px; margin:12px; text-align:center" class="alert alert-danger" role="alert">
                <h4>Başlık</h4>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.baslik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.baslik, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <br /><br />
            <div style="width:800px; margin:12px; text-align:center" class="alert alert-danger" role="alert">
                <h4>Açıklama</h4>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.aciklama, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.aciklama, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">

            <div style="width:800px; margin:12px; text-align:center" class="alert alert-danger" role="alert">
                <h4>Haber Fotoğrafı Düzelt</h4>
            </div>   
            
          
                     
                 @Html.TextBoxFor(model => model.Foto, new { type = "file" })
            @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })

        </div>
      

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

