<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/css/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="@Url.Content("~/Scripts/tinymce/jquery.tinymce.js")" type="text/javascript"></script>

   
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#0e4b7d">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
             
                <a style="color:#09f21c" href="@Url.Action("AnaSayfa", "KentKonsey", new { Area = ""}, null)" target="_blank" class="navbar-brand">Kent Konsey</a> 
                <a style="color:#09f21c" href="@Url.Action("Haberler", "KentKonsey", new { Area = ""}, null)" target="_blank" class="navbar-brand">Haberler</a> 
                <a  href="@Url.Action("Index", "Home", new { Area = "Admin"}, null)" class="navbar-brand" style="color:#09f21c;" target="_blank">Haber Panel</a> 
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
       
    </div>

</body>
</html>